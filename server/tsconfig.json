{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "lib": ["ES2017"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "..",
    "paths": {
      "@/*": ["./src/*"],
      "@/server/*": ["./server/*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["../node_modules", "../.next"]
}
