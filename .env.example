# Database Configuration
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL=postgresql://postgres:password@localhost:5432/scribeai?schema=public

# Better Auth Configuration (Authentication)
BETTER_AUTH_URL=http://localhost:3000

BETTER_AUTH_SECRET=your-secret-key-here-minimum-32-characters

BETTER_AUTH_TRUST_HOST=false

# OAuth Providers (Optional - for social login)
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Google Gemini API Configuration
# ============================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Gemini model to use for transcription
GEMINI_MODEL=models/gemini-1.5-pro

# Maximum retries for failed API requests
GEMINI_MAX_RETRIES=3

# API timeout in milliseconds
GEMINI_TIMEOUT_MS=30000

# ============================================================================
# Transcription Settings
# ============================================================================
# Batch size for transcription in milliseconds (30 seconds recommended)
TRANSCRIPTION_BATCH_SIZE_MS=30000

# Number of context words to pass between batches
TRANSCRIPTION_CONTEXT_WORDS=50

# Enable speaker diarization (speaker identification)
ENABLE_SPEAKER_DIARIZATION=true

# ============================================================================
# WebSocket Server Configuration
# ============================================================================
# Port for WebSocket server (must match client config)
SOCKET_PORT=3001

# WebSocket server URL (used by client)
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001

# ============================================================================
# Storage Configuration
# ============================================================================
# Local storage path for audio chunks (relative to project root)
STORAGE_PATH=./storage/audio-chunks

# Maximum chunk size in bytes (5MB recommended)
MAX_CHUNK_SIZE_BYTES=5242880

# ============================================================================
# Logging Configuration
# ============================================================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Enable file logging
LOG_TO_FILE=true

# Log directory path
LOG_DIR=./logs

# ============================================================================
# Rate Limiting
# ============================================================================
# Maximum requests per minute per user
RATE_LIMIT_PER_MINUTE=60

# Maximum concurrent transcription jobs
MAX_CONCURRENT_TRANSCRIPTIONS=5

# ============================================================================
# Feature Flags
# ============================================================================
# Enable real-time transcription streaming
ENABLE_REALTIME_TRANSCRIPTION=false

# Enable automatic transcript summarization
ENABLE_AUTO_SUMMARY=false

# Enable audio playback in browser
ENABLE_AUDIO_PLAYBACK=true

# ============================================================================
# Email Configuration (Optional - for email verification)
# ============================================================================
# SMTP settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=noreply@scribeai.app

# ============================================================================
# Development Settings
# ============================================================================
# Node environment
NODE_ENV=development

# Enable debug mode
DEBUG=false

# ============================================================================
# AI Services
# ============================================================================
GEMINI_API_KEY="your_gemini_api_key_here"
GEMINI_MODEL="gemini-1.5-pro"

# ============================================================================
# Backend Configuration
# ============================================================================
PORT=3001
SOCKET_URL="http://localhost:3001"
CORS_ORIGIN="http://localhost:3000"
